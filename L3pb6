package myfirst;
/*6. Scrieti un program Java care genereaza 2 valori aleatoare 
 *   si efectueaza asupra lor cateva operatii matematice.
*/

import java.util.Random;

public class operatii{
        public static void main(String[] args) {
                Random rand = new Random();
                int x = rand.nextInt(100);
                int y = rand.nextInt(100);

                System.out.println("Numerele sunt: " + x + " " + y);
                
                System.out.println("Suma: " + (x + y));
                
                System.out.println("Diferenta: " + (x - y));
                
                System.out.println("Inmultire: " + (x * y));
                
                System.out.println("Impartire: " + (x / y));
                
        }
}
